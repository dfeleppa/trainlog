<br>
<div class="title-box">
    <div class="box1"> 
        <%= current_user.first_name %>'s Log Book
    </div>
    <div class="box2">
        <%= link_to 'New Entry', new_entry_path, class:'button'%>
    </div>
</div>
<div class="entry-container">
    <% if recent_entry %>
        <% current_user.entries.each do |entry| %>
            <div class="entry-box">
                <div class="entry-left"> <%= link_to entry.name, entry_path(entry) %> </div>
                <div class="entry-left-bot">
                    <div class="entry-<%=entry.status%>">
                        <%= entry.status %>
                        </div>
                </div>
                <div class="entry-right">
                    <div class="trash">
                        <%= link_to image_tag("trashh1.png"), entry_path(entry), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }%>
                    </div>
                </div>
                <div class="entry-right-bot">(<%= entry.updated_at.strftime("Updated on %m/%d/%Y at %I:%M%p") %>)</div>
            </div>
        <% end %>

    <% else %>
        <div class="entry-box">
            <p> No entries yet. <%= link_to 'Create', new_entry_path, class:'button'%> your first one! </p>
        </div>
    <% end %>
</div>