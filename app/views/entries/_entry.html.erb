<div class="entry-show"> 
    <div class="entry-show-left">
        <h2><%= @entry.name %> (<%= @entry.status %>)</h2>
    </div>
    <div class="entry-show-right">
        <% if @entry.user == current_user %>
            <%= link_to "Edit", edit_entry_path(@entry)%> | <%= link_to "Delete", entry_path(@entry), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }%>
        <% end %>
    </div>
</div>
<div class="entry-notes">
    <%= @entry.notes %>
</div>
